<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:id="@+id/scrollview_home"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        tools:context=".ui.home.HomeFragment">



        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Shop by Category"
            android:textStyle="bold"
            android:textSize="25sp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">
            <ImageButton
                android:id="@+id/home_clothing_button"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:scaleType="centerInside"
                android:layout_margin="33dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/clothing"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                app:layout_constraintTop_toBottomOf="@+id/home_clothing_button"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Clothing"
                android:textSize="15sp"/>
            <ImageButton
                android:id="@+id/home_health_button"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:scaleType="centerInside"
                android:layout_margin="35dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/home_clothing_button"
                android:src="@drawable/health"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="135dp"
                app:layout_constraintTop_toBottomOf="@+id/home_health_button"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Health"
                android:textSize="15sp"/>
            <ImageButton
                android:id="@+id/home_electronic_button"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:scaleType="centerInside"
                android:layout_margin="33dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/home_health_button"
                android:src="@drawable/electronics"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                app:layout_constraintTop_toBottomOf="@+id/home_electronic_button"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Elctronics"
                android:textSize="15sp"/>
            <ImageButton
                android:id="@+id/home_household_button"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:scaleType="centerInside"
                android:layout_margin="33dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/home_electronic_button"
                android:src="@drawable/household"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="310dp"
                app:layout_constraintTop_toBottomOf="@+id/home_electronic_button"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Household"
                android:textSize="15sp"/>
            <ImageButton
                android:id="@+id/home_babyandkid_button"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:scaleType="centerInside"
                android:layout_margin="33dp"
                app:layout_constraintTop_toBottomOf="@+id/home_clothing_button"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/baby"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                app:layout_constraintTop_toBottomOf="@+id/home_babyandkid_button"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Baby"
                android:textSize="15sp"/>
            <ImageButton
                android:id="@+id/home_car_button"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:scaleType="centerInside"
                android:layout_margin="33dp"
                app:layout_constraintTop_toBottomOf="@+id/home_health_button"
                app:layout_constraintLeft_toRightOf="@+id/home_babyandkid_button"
                android:src="@drawable/car"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="145dp"
                app:layout_constraintTop_toBottomOf="@+id/home_babyandkid_button"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Car"
                android:textSize="15sp"/>
            <ImageButton
                android:id="@+id/home_furniture_button"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:scaleType="centerInside"
                android:layout_margin="33dp"
                app:layout_constraintTop_toBottomOf="@+id/home_health_button"
                app:layout_constraintLeft_toRightOf="@+id/home_car_button"
                android:src="@drawable/furniture"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                app:layout_constraintTop_toBottomOf="@+id/home_babyandkid_button"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Furniture"
                android:textSize="15sp"/>
            <ImageButton
                android:id="@+id/home_map_button"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:scaleType="centerInside"
                android:layout_margin="33dp"
                app:layout_constraintTop_toBottomOf="@+id/home_health_button"
                app:layout_constraintLeft_toRightOf="@+id/home_furniture_button"
                android:src="@drawable/compass"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="318dp"
                app:layout_constraintTop_toBottomOf="@+id/home_babyandkid_button"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Nearby"
                android:textSize="15sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Just for you"
            android:textStyle="bold"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Clothing and Shoes"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/products_results_recycler_view_0"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Beauty and Health"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/products_results_recycler_view_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Electronics"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/products_results_recycler_view_2"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Household"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/products_results_recycler_view_3"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Baby and Kids"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/products_results_recycler_view_4"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Cars"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/products_results_recycler_view_5"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Furniture"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/products_results_recycler_view_6"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

    </LinearLayout>

</ScrollView>
