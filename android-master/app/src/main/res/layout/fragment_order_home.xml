<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.order.OrderHomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUYER"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="25sp" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#dedddd"/>
            <Button
                android:id="@+id/OrderHistoryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Order History"/>
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#dedddd"/>

            <Button
                android:id="@+id/MyRequestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="My Requests"/>
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#dedddd"/>
        </LinearLayout>
        </androidx.cardview.widget.CardView>



        <TextView
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SELLER"
            android:gravity="center"
            android:textSize="25sp" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#dedddd"/>
            <Button
                android:id="@+id/OrderRequestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Received Requests"/>
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#dedddd"/>
            <Button
                android:id="@+id/MyPostButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="My Post"/>
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#dedddd"/>
            <Button
                android:id="@+id/SaleHistoryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Sale History"/>
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#dedddd"/>
        </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>