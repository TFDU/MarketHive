<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/message_profile_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/profile_photo_test"/>

    <TextView
        android:id="@+id/message_body_text"
        android:text="Hi, I'm fine!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/message_profile_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="4dp"
        android:maxWidth="240dp"
        android:padding="6dp"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_rectangle_sent"/>

    <TextView
        android:id="@+id/message_time_text"
        android:text="14:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/message_profile_image"
        app:layout_constraintTop_toBottomOf="@id/message_body_text"
        android:layout_marginRight="4dp"
        android:textSize="10sp" />

</androidx.constraintlayout.widget.ConstraintLayout>